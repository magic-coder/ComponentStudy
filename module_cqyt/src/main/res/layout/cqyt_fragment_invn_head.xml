<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@id/tmp"
        layout="@layout/xxcx_fragment_invn_query_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/material_num" />

        <EditText
            android:id="@id/et_material_num"
            style="@style/RightEditTextItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_location_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_ref_line_num_name"
            style="@style/LeftTextViewItemStyle"
            android:text="@string/location_type" />

        <Spinner
            android:id="@id/sp_location_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/location" />

        <EditText
            android:id="@id/et_location"
            style="@style/RightEditTextItemStyle" />

    </LinearLayout>
</LinearLayout>
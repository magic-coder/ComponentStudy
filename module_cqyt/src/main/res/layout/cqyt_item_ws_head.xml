<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_parent_node_bg"
    android:orientation="horizontal">

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/rowNum"
        style="@style/TableHeaderStyle"
        android:layout_width="60dp"
        android:text="@string/row_num" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/materialNum"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/material_num" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/materialDesc"
        style="@style/TableHeaderStyle"
        android:layout_width="240dp"
        android:text="@string/material_desc" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/materialGroup"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/material_group" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/quantity"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/cqyt_quantity" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/batchFlag"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/batch_flag" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/cqyt_tv_declaration_ref"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="报检单" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/remark"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/remark" />

    <View style="@style/ItemSeperatorLayout" />


</LinearLayout>
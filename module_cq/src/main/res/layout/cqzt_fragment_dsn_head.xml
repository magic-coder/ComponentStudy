<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/work" />

        <Spinner
            android:id="@id/sp_work"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/move_cause" />

        <Spinner
            android:id="@id/sp_move_cause"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_auto_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            android:id="@id/tv_auto_comp_name"
            style="@style/LeftTextViewItemStyle"
            android:text="@string/cost_center" />

        <AutoCompleteTextView
            android:id="@+id/et_auto_comp"
            style="@style/RightEditTextItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_auto_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="WBS编号" />

        <AutoCompleteTextView
            android:id="@+id/et_project_num"
            style="@style/RightEditTextItemStyle" />

    </LinearLayout>


    <LinearLayout
        android:id="@id/ll_auto_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="订单编号" />

        <EditText
            android:id="@+id/et_order_num"
            style="@style/RightEditTextItemStyle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="领料单位" />

        <Spinner
            android:id="@+id/cqzt_sp_req_company"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/transfer_date" />

        <com.richfit.common_lib.widget.RichEditText
            android:id="@id/et_transfer_date"
            style="@style/RightRichEditTextItemStyle" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="创建人" />

        <TextView
            android:id="@+id/tv_creator"
            style="@style/RightTextViewItemStyle" />
    </LinearLayout>
</LinearLayout>
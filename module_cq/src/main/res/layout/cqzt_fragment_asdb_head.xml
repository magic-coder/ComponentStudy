<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/root_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/ref_name" />

        <com.richfit.common_lib.widget.RichEditText
            android:id="@id/et_ref_num"
            style="@style/RightRichEditTextItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/ref_name" />

        <TextView
            android:id="@id/tv_ref_num"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding"
        android:visibility="gone">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/supplier" />

        <TextView
            android:id="@id/tv_supplier"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_send_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_send_work_name"
            style="@style/LeftTextViewItemStyle"
            android:text="@string/send_work" />

        <TextView
            android:id="@id/tv_send_work"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>


    <!--增加-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="收货工厂" />

        <Spinner
            android:id="@id/sp_work"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="收货库存地点" />

        <Spinner
            android:id="@id/sp_inv"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_min_height"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="管理费率" />

        <EditText
            android:id="@id/cqzt_et_glf"
            style="@style/RightEditTextItemStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="运杂费" />

        <EditText
            android:id="@id/cqzt_et_lyf"
            style="@style/RightEditTextItemStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="仓储费" />

        <EditText
            android:id="@id/cqzt_et_ckf"
            style="@style/RightEditTextItemStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="其他费用" />

        <EditText
            android:id="@id/cqzt_et_yfhj"
            style="@style/RightEditTextItemStyle" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/transfer_date" />

        <com.richfit.common_lib.widget.RichEditText
            android:id="@id/et_transfer_date"
            style="@style/RightRichEditTextItemStyle"
            android:drawableRight="@mipmap/icon_find"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>


    <LinearLayout
        android:id="@id/ll_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/creator" />

        <TextView
            android:id="@id/tv_creator"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

</LinearLayout>
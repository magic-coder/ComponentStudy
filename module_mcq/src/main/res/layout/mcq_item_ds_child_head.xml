<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_child_node_bg"
    android:orientation="horizontal">


    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/location"
        style="@style/TableChildHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/x_location" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/mcq_tv_location_type"
        style="@style/TableChildHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/location_type" />

    <View style="@style/ItemSeperatorLayout" />

    <!--主计量单位实发-->
    <TextView
        android:id="@id/quantity"
        style="@style/TableChildHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/mcq_main_delivery_quantity" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/mcq_quantity_custom"
        style="@style/TableChildHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/mcq_delivery_quantity_custom" />

    <View style="@style/ItemSeperatorLayout" />

</LinearLayout>
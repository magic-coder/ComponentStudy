<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_parent_node_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@id/materialNum"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/material_num" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/materialGroup"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/material_group" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/materialDesc"
        style="@style/TableHeaderStyle"
        android:layout_width="240dp"
        android:text="@string/material_desc" />


    <View style="@style/ItemSeperatorLayout" />


    <TextView
    android:id="@id/materialUnit"
    style="@style/TableHeaderStyle"
    android:layout_width="120dp"
    android:text="@string/mcq_main_material_unit" />

    <View style="@style/ItemSeperatorLayout" />


    <TextView
        android:id="@id/mcq_material_unit_custom"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/mcq_material_unit_custom" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/invQuantity"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/mcq_main_inv_quantity" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/mcq_inv_quantity_custom"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/mcq_inv_quantity_custom" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/mcq_tv_location_type"
        style="@style/TableHeaderStyle"
        android:layout_width="120dp"
        android:text="@string/location_type" />

    <View style="@style/ItemSeperatorLayout" />

</LinearLayout>
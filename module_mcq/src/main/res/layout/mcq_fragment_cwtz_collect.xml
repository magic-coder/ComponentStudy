<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:id="@id/root_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_num" />

            <com.richfit.common_lib.widget.RichEditText
                android:id="@id/et_material_num"
                style="@style/RightRichEditTextItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_desc" />

            <TextView
                android:id="@id/tv_material_desc"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_group" />

            <TextView
                android:id="@id/tv_material_group"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_tv_main_material_unit_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_unit" />

            <TextView
                android:id="@id/tv_material_unit"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_material_unit_custom" />

            <TextView
                android:id="@id/mcq_tv_material_unit_custom"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:id="@id/mcq_ll_batch_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/batch_flag" />

            <EditText
                android:id="@id/et_batch_flag"
                style="@style/RightEditTextItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/tv_ref_line_num_name"
                style="@style/LeftTextViewItemStyle"
                android:text="源仓储类型" />

            <Spinner
                android:id="@id/sp_location_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinner_min_height"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/send_location" />

            <com.richfit.common_lib.widget.RichEditText
                android:id="@id/et_send_location"
                style="@style/RightRichEditTextItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/special_inv_flag" />


            <Spinner
                android:id="@+id/sp_special_inv"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinner_min_height"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_tv_send_inv_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/send_inv_quantity" />

            <TextView
                android:id="@id/tv_send_inv_quantity"
                style="@style/RightTextViewItemStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_inv_quantity_custom" />

            <TextView
                android:id="@id/mcq_tv_inv_quantity_custom"
                style="@style/RightTextViewItemStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/tv_ref_line_num_name"
                style="@style/LeftTextViewItemStyle"
                android:text="目标仓储类型" />

            <Spinner
                android:id="@id/sp_rec_location_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinner_min_height"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/rec_location" />

            <EditText
                android:id="@id/et_rec_location"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_tv_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/adjust_quantity" />

            <EditText
                android:id="@id/et_adjust_quantity"
                style="@style/RightTextViewItemStyle"
                android:inputType="numberDecimal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_tv_quantity_custom" />

            <EditText
                android:id="@id/mcq_et_quantity_custom"
                style="@style/RightTextViewItemStyle"
                android:inputType="numberDecimal" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
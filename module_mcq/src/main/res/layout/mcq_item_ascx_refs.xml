    android:paddingTop="@dimen/len_10"
    android:paddingBottom="@dimen/len_10"
    android:background="@drawable/detail_parent_node_bg"
    android:orientation="horizontal">


    <TextView
        android:id="@id/mcq_tv_ref_num"
        style="@style/TableHeaderStyle"
        android:layout_width="135dp"
        android:text="@string/mcq_ref_num" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/tv_creator"
        style="@style/TableHeaderStyle"
        android:layout_width="90dp"
        android:text="@string/creator" />

    <View style="@style/ItemSeperatorLayout" />

    <TextView
        android:id="@id/tv_creation_date"
        style="@style/TableHeaderStyle"
        android:layout_width="90dp"
        android:text="@string/create_date" />

    <View style="@style/ItemSeperatorLayout" />

</LinearLayout>
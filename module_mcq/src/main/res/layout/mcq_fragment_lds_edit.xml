<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@id/root_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/ref_line_num" />

            <TextView
                android:id="@id/tv_ref_line_num"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_num" />

            <TextView
                android:id="@id/tv_material_num"
                style="@style/RightTextViewItemStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_desc" />

            <TextView
                android:id="@id/tv_material_desc"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_tv_material_unit_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/material_unit" />

            <TextView
                android:id="@id/tv_material_unit"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_material_unit_custom" />

            <TextView
                android:id="@id/mcq_tv_material_unit_custom"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_batch_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/tv_batch_flag_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/batch_flag" />

            <TextView
                android:id="@id/tv_batch_flag"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/store_location" />


            <TextView
                android:id="@id/tv_inv"
                style="@style/RightTextViewItemStyle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/act_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/act_delivery_quantity" />

            <TextView
                android:id="@id/tv_act_delivery_quantity"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <!--副计量单位应发-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_act_delivery_quantity_custom" />

            <TextView
                android:id="@id/mcq_tv_act_quantity_custom"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/delivery_quantity" />

            <EditText
                android:id="@id/et_quantity"
                style="@style/RightEditTextItemStyle"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal" />

        </LinearLayout>


        <!--副计量单位实发数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_delivery_quantity_custom" />

            <EditText
                android:id="@id/mcq_et_quantity_custom"
                style="@style/RightEditTextItemStyle"
                android:inputType="numberDecimal" />
        </LinearLayout>


        <LinearLayout
            android:id="@id/ll_location_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@id/tv_ref_line_num_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/location_type" />

            <Spinner
                android:id="@id/sp_location_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinner_min_height"
                android:layout_weight="2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/x_location" />

            <com.richfit.common_lib.widget.RichEditText
                android:id="@id/et_location"
                style="@style/RightRichEditTextItemStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/x_location" />


            <Spinner
                android:id="@id/sp_location"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinner_min_height"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp">

            <TextView
               android:id="@id/mcq_tv_inv_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/inv_quantity" />

            <TextView
                android:id="@id/tv_inv_quantity"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_tv_location_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/location_quantity" />

            <TextView
                android:id="@id/tv_location_quantity"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <!--副计量单位仓位数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_location_quantity_custom" />

            <TextView
                android:id="@id/mcq_tv_location_quantity_custom"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@id/mcq_total_quantity_name"
                style="@style/LeftTextViewItemStyle"
                android:text="@string/total_quantity" />

            <TextView
                android:id="@id/tv_total_quantity"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>

        <!--副计量单位累计数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/LeftTextViewItemStyle"
                android:text="@string/mcq_total_quantity_custom" />

            <TextView
                android:id="@id/mcq_tv_total_quantity_custom"
                style="@style/RightTextViewItemStyle" />
        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>